<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">
            org.hibernate.dialect.PostgreSQL95Dialect
        </property>

        <property name="hibernate.connection.driver_class">
            org.postgresql.Driver
        </property>

        <property name="hibernate.connection.url">
            jdbc:postgresql://localhost:5432/products?currentSchema=products
        </property>

        <property name="hibernate.connection.username">
            testadmin
        </property>

        <property name="hibernate.connection.password">
            test
        </property>

        <property name="show_sql">
            true
        </property>

        <property name="current_session_context_class">
            thread
        </property>

        <property name="connection.pool_size">
            8
        </property>

        <!-- List of XML mapping files -->
        <mapping class="com.wigravy.spring.database.entity.Product"/>
        <mapping class="com.wigravy.spring.database.entity.Customer"/>
        <mapping class="com.wigravy.spring.database.entity.Order"/>

    </session-factory>
</hibernate-configuration>